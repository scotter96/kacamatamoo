<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="wiz_stock_picking_scrap_view_form_inherit" model="ir.ui.view">
            <field name="name">wiz.stock.picking.scrap.view.form.inherit</field>
            <field name="model">wiz.stock.picking.scrap</field>
            <field name="inherit_id" ref="stock_picking_whole_scrap.view_stock_picking_scrap_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="before">
                    <group>
                        <div>
                            <label for="barcode" string="Scan Barcode"/>
                            <h1 class="oe_title">
                                <field name="barcode" autofocus="autofocus"/>
                            </h1>
                        </div>
                    </group>
                </xpath>
                <xpath expr="//field[@name='line_ids']/list/field[@name='should_replenish']" position="replace"></xpath>
                <field name="scrap_location_id" position="replace">
                    <field name="picking_type_id" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                </field>
                <button name="create_scrap" position="replace">
                    <button string="Confirm" name="create_intermediate_scrap" type="object" class="oe_highlight"/>
                </button>
            </field>
        </record>
    
    </data>
    

</odoo>
