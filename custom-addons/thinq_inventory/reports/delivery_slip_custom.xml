<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_deliveryslip_custom">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="picking">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <!-- Gaya CSS -->
                            <style>
                                .surat-jalan-table {
                                    width: 100%;
                                    border-collapse: collapse;
                                    font-size: 10pt;
                                    font-family: Arial, sans-serif;
                                }
                                .surat-jalan-table th,
                                .surat-jalan-table td {
                                    border: 1px solid #000;
                                    padding: 5px;
                                    text-align: left;
                                }
                                .surat-jalan-table th {
                                    background-color: #f2f2f2;
                                    font-weight: bold;
                                    text-align: center;
                                }
                                .header-info {
                                    margin-bottom: 15px;
                                    line-height: 1.4;
                                }
                                .header-title {
                                    text-align: center;
                                    font-size: 14pt;
                                    font-weight: bold;
                                    margin-bottom: 10px;
                                }
                                .col-label {
                                    font-weight: bold;
                                }
                                .text-center {
                                    text-align: center;
                                }
                                .text-right {
                                    text-align: right;
                                }
                                .no-border {
                                    border: none !important;
                                }
                                .table-header {
                                    width: 100%;
                                    margin-bottom: 15px;
                                }
                                .table-header td {
                                    padding: 2px;
                                    vertical-align: top;
                                }
                            </style>

                            <!-- Judul -->
                                <div class="header-title">SURAT JALAN</div>

                                <!-- Header Info -->
                                <table class="table-header no-border">
                                    <tr>
                                        <td class="col-label" style="width: 20%;">Tujuan</td>
                                        <td style="width: 30%;">: <span t-field="picking.partner_id.name"/></td>
                                        <td class="col-label" style="width: 20%;">Nomor</td>
                                        <td style="width: 30%;">: <span t-field="picking.name"/></td>
                                    </tr>
                                    <tr>
                                        <td class="col-label">Alamat</td>
                                        <td>: 
                                            <span t-field="picking.partner_id.street"/><br/>
                                            <t t-if="picking.partner_id.city"><span t-field="picking.partner_id.city"/>, </t>
                                            <t t-if="picking.partner_id.state_id.name"><span t-field="picking.partner_id.state_id.name"/>, </t>
                                            <t t-if="picking.partner_id.country_id.name"><span t-field="picking.partner_id.country_id.name"/></t>
                                        </td>
                                        <td class="col-label">Tanggal</td>
                                        <td>: <span t-field="picking.date_done"/></td>
                                    </tr>
                                </table>
                            <hr style="margin: 10px 0;"/>

                            <!-- Tabel Barang -->
                            <table class="surat-jalan-table">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">No</th>
                                        <th style="width: 10%;">SKU</th>
                                        <th style="width: 30%;">Product</th>
                                        <th style="width: 10%;">Box Code</th>
                                        <th style="width: 10%;">Qty</th>
                                        <th style="width: 15%;">Store Remarks</th>
                                        <th style="width: 20%;">FPO</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="counter" t-value="1"/>
                                    <t t-foreach="picking.move_line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center"><span t-esc="counter"/></td>
                                            <td><span t-field="line.product_id.default_code"/></td>
                                            <td><span t-field="line.product_id.display_name"/></td>
                                            <td class="text-center">
                                                <span t-field="line.move_id.box_code"/>
                                            </td>
                                            <td class="text-center"><span t-esc="line.qty_done"/></td>
                                            <td><span t-field="line.location_id.name"/></td>
                                            <td><span t-field="picking.origin" t-if="picking.origin"/>
                                                <span t-if="not picking.origin">-</span>
                                            </td>
                                        </tr>
                                        <t t-set="counter" t-value="counter + 1"/>
                                    </t>
                                </tbody>
                            </table>

                            <br/>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>