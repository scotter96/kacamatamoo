        <!-- Paper Format untuk Label 38mm x 70mm -->
        <record id="paperformat_shipping_label" model="report.paperformat">
            <field name="name">Shipping Label 38x70mm</field>
            <field name="format">custom</field>
            <field name="page_height">70</field>
            <field name="page_width">38</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line">false</field>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="shipping_label_report_action" model="ir.actions.report">
            <field name="name">Shipping Label</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">thinq_inventory.shipping_label_report</field>
            <field name="report_file">thinq_inventory.shipping_label_report</field>
            <field name="paperformat_id" ref="paperformat_shipping_label"/>
            <field name="multi">False</field>
            <field name="attachment_use">False</field>
            <field name="print_report_name">
                (object.picking_type_code == 'incoming' and 'Shipping Label (PO) - %s' % object.name) or (object.picking_type_code == 'outgoing' and 'Shipping Label (SO) - %s' % object.name) or ('Shipping Label - %s' % object.name)
            </field>
        </record>

        <!-- Custom Label 18x38mm (Landscape) -->
        <record id="paperformat_label_custom" model="report.paperformat">
            <field name="name">Custom Label 18x38mm</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">120</field>
            <field name="page_width">160</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_report_product_label_custom" model="ir.actions.report">
            <field name="name">Product Labels Custom 18x38mm</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">thinq_inventory.report_product_label_custom</field>
            <field name="report_file">thinq_inventory.report_product_label_custom</field>
            <field name="print_report_name">'Product Labels - %s' % (object.name)</field>
            <field name="paperformat_id" ref="thinq_inventory.paperformat_label_custom"/>
        </record>

        <!-- Report untuk Picking Product Labels -->
        <record id="action_report_picking_product_label_custom" model="ir.actions.report">
            <field name="name">Picking Product Labels Custom 18x38mm</field>
            <field name="model">product.product</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">thinq_inventory.report_picking_product_label_custom</field>
            <field name="report_file">thinq_inventory.report_picking_product_label_custom</field>
            <field name="print_report_name">'Picking Product Labels'</field>
            <field name="paperformat_id" ref="thinq_inventory.paperformat_label_custom"/>
        </record>
    </data>
</odoo>