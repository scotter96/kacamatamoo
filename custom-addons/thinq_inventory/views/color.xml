<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Window untuk Color -->
    <record id="action_color" model="ir.actions.act_window">
        <field name="name">Color</field>
        <field name="res_model">thinq.color</field>
        <field name="view_mode">list,form</field> <!-- Pastikan 'list' dan 'form' ada di view_mode -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first color
            </p>
        </field>
    </record>

    <!-- Form View untuk Color -->
    <record id="view_color_form" model="ir.ui.view">
        <field name="name">thinq.color.form</field>
        <field name="model">thinq.color</field>
        <field name="arch" type="xml">
            <form string="Color">
                <sheet>
                    <group>
                        <field name="color_name"/>
                        <!-- Widget 'color' akan mengubah input char ini menjadi color picker -->
                        <field name="color_type" widget="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View untuk Color -->
    <record id="view_color_tree" model="ir.ui.view">
        <field name="name">thinq.color.list</field>
        <field name="model">thinq.color</field>
        <field name="arch" type="xml">
            <list string="Colors">
                <field name="color_name"/>
                <!-- Widget 'color' juga berfungsi di list view, menampilkan swatch warna -->
                <field name="color_type" widget="color"/>
            </list>
        </field>
    </record>
    
</odoo>