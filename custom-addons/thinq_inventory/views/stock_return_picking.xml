<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit form Return Picking wizard -->
    <record id="view_return_picking_form_inherit_scrap" model="ir.ui.view">
        <field name="name">stock.return.picking.form.inherit.scrap</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <!-- Tambah button Scrap di header -->
            <xpath expr="//header" position="inside">
                <button name="action_scrap_from_return"
                        string="Scrap"
                        type="object"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
