<!-- wb_consolidation/views/consolidation_link_views.xml -->
<odoo>
  <record id="view_consolidation_link_list" model="ir.ui.view">
    <field name="name">consolidation.link.list</field>
    <field name="model">consolidation.link</field>
    <field name="arch" type="xml">
      <list>
        <field name="parent_id"/>
        <field name="child_id"/>
        <field name="date_from"/>
        <field name="date_to"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_consolidation_link_form" model="ir.ui.view">
    <field name="name">consolidation.link.form</field>
    <field name="model">consolidation.link</field>
    <field name="arch" type="xml">
      <form string="Consolidation Link">
        <sheet>
          <group>
            <field name="parent_id" options="{'no_create_edit': True}"/>
            <field name="child_id" domain="[('id','!=', parent_id)]" options="{'no_create_edit': True}"/>
          </group>
          <group>
            <field name="date_from" required="1"/>
            <field name="date_to"/>
            <field name="active"/>
          </group>
          <field name="parent_id" invisible="1"/>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_consolidation_links" model="ir.actions.act_window">
    <field name="name">Parent Subsidiary Links</field>
    <field name="res_model">consolidation.link</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'search_default_my_companies': 1}</field>
  </record>
</odoo>
