<odoo>
  <record id="view_consolidated_coa_form" model="ir.ui.view">
    <field name="name">consolidation.coa.form</field>
    <field name="model">consolidation.coa</field>
    <field name="arch" type="xml">
      <form string="Consolidated COA" create="true" edit="true">
        <header>
          <button name="action_build" type="object" string="Build" class="btn-primary"
                  invisible="state == 'ready'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,ready"/>
        </header>
        <sheet>
          <group>
            <field name="company_id" required="1"/>
            <field name="as_of_date" required="1"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids" readonly="1" nolabel="1">
                <list editable="bottom" create="0" delete="0">
                  <field name="display_code"/>
                  <field name="company_id"/>
                  <field name="account_id"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_consolidated_coa" model="ir.actions.act_window">
    <field name="name">Consolidated COA</field>
    <field name="res_model">consolidation.coa</field>
    <field name="view_mode">list,form</field>
    <field name="context">{}</field>
  </record>

 
</odoo>
