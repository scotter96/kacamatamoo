<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_city_view_tree" model="ir.ui.view">
            <field name="name">res.city.view.tree</field>
            <field name="model">res.city</field>
            <field name="arch" type="xml">
                <list editable="top">
                    <field name="name"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="res_city_action" model="ir.actions.act_window">
            <field name="name">City</field>
            <field name="res_model">res.city</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to start a city.
                </p>
                <p>
                    You can create a new city by clicking the "Create" button.
                </p>
            </field>
        </record>
    
    </data>
    

</odoo>
