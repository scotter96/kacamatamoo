<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Multiple Search Wizard Form View -->
        <record id="view_multiple_search_wizard_form" model="ir.ui.view">
            <field name="name">multiple.search.wizard.form</field>
            <field name="model">multiple.search</field>
            <field name="arch" type="xml">
                <form string="Universal Search">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="search_model" invisible="1"/>
                                <span>Search Documents</span>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="keyword" placeholder="Enter keyword to search..." 
                                       class="oe_inline" style="font-size: 14px;"/>
                            </group>
                            <group>
                                <field name="search_model" 
                                       invisible="search_model != 'all'"
                                       help="Select which type of documents to search"/>
                            </group>
                        </group>

                        <div class="oe_clear"/>
                        
                        <div style="margin-top: 10px;">
                            <p class="text-muted">
                                <i class="fa fa-info-circle" title="Information"></i> 
                                <strong>Search Tips:</strong><br/>
                                • <strong>Multiple keywords:</strong> Use comma, semicolon, or new line to separate<br/>
                                • <strong>Partial match:</strong> Search will find documents containing your keywords<br/>
                                • <strong>Search fields:</strong> Document number, reference, partner name, and descriptions
                            </p>
                        </div>
                    </sheet>
                    
                    <footer>
                        <button name="action_search" string="Search" type="object" class="btn-primary"/>
                        <button name="action_discard" string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Multiple Search Wizard Action -->
        <record id="action_multiple_search_wizard" model="ir.actions.act_window">
            <field name="name">Universal Search</field>
            <field name="res_model">multiple.search</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Search Invoices Action -->
        <record id="action_search_invoices" model="ir.actions.act_window">
            <field name="name">Search Invoices</field>
            <field name="res_model">multiple.search</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'search_model': 'account.move', 'default_search_model': 'account.move', 'search_type': 'invoice'}</field>
        </record>

        <!-- Search Bills Action -->
        <record id="action_search_bills" model="ir.actions.act_window">
