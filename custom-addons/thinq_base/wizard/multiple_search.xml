            <field name="context">{'search_model': 'account.move.line', 'default_search_model': 'account.move.line', 'search_type': 'journal_items'}</field>
        </record>

        <!-- Other Search Actions -->
        <record id="action_search_pos_orders" model="ir.actions.act_window">
