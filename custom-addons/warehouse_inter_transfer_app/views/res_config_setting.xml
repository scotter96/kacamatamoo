<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_inter_warehouse" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.inter.warehouse</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='operations_setting_container']" position="before">
                <div class="app_settings_block" data-string="Inter Warehouse Transfer" data-key="inter_warehouse">
                    <h2>Inter Warehouse Transfer</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="inter_warehouse_approval">
                            <div class="o_setting_left_pane">
                                <field name="approve_by_manager"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="approve_by_manager"/>
                                <div class="text-muted">
                                    Require manager approval for all inter-warehouse transfers.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
