<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.PartnerLine" t-inherit-mode="extension">

        <xpath expr="//div[hasclass('partner-line-adress')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>

        <xpath expr="//div[hasclass('partner-line-email')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>

        <xpath expr="(//tr[hasclass('partner-line', 'partner-info')]//td)[2]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>

        <xpath expr="(//tr[hasclass('partner-line', 'partner-info')]//td[hasclass('partner-line-email')])" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>

        <xpath expr="(//tr[hasclass('partner-line', 'partner-info')]//td)[1]" position="after">
            <td>
                <div class="partner-info-city" t-if="props.partner.city" t-esc="props.partner.city" />
            </td>
            <td>
                <t t-if="props.partner.phone">
                    <div class="partner-info-phone" t-esc="props.partner.phone" />
                </t>
                <t t-else="">
                    <div class="partner-info-mobile" t-if="props.partner.mobile" t-esc="props.partner.mobile" />
                </t>
            </td>
            <td>
                <div class="partner-info-email" t-if="props.partner.email" t-esc="props.partner.email" />
            </td>
            <td>
                <div class="partner-info-birthday" t-if="props.partner.birthday" t-esc="props.partner.birthday" />
            </td>
        </xpath>

        <xpath expr="((//Dropdown)[1]//DropdownItem)[2]" position="after">
            <DropdownItem t-if="!props.partner.is_customer_store" onSelected="() => props.onClickSetAsCustomer(props.partner)">
                Set As Customer
            </DropdownItem>
        </xpath>

        <xpath expr="((//Dropdown)[2]//DropdownItem)[2]" position="after">
            <DropdownItem t-if="!props.partner.is_customer_store" onSelected="() => props.onClickSetAsCustomer(props.partner)">
                Set As Customer
            </DropdownItem>
        </xpath>

    </t>

</templates>
