<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('header-row')]/div[hasclass('col')][8]" position="after">
            <div class="col wide p-2">Picking Status</div>
        </xpath>
        <xpath expr="//div[hasclass('order-row')]/div[hasclass('col')][8]" position="after">
            <div class="col wide p-2">
                <div><t t-esc="getPickedUpStatus(order)"></t></div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('control-buttons')]/button[last()]" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>
    </t>

</templates>
