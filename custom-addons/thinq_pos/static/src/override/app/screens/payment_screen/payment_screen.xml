<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('js_invoice')]" position="attributes">
            <attribute name="disabled">1</attribute>
        </xpath>
        <xpath expr="//button[hasclass('js_invoice')]/span" position="replace">
            <span><i class="fa fa-file-text-o me-2" />Post</span>
        </xpath>
    </t>
    <t t-inherit="point_of_sale.PaymentScreenMethods" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('paymentmethods-container')]" position="attributes">
            <attribute name="style">overflow-y: auto !important;</attribute>
        </xpath>
    </t>
</templates>