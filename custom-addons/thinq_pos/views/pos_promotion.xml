<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_pos_promotion_class" model="ir.actions.act_window">
        <field name="name">Promotion Classes</field>
        <field name="res_model">pos.promotion.class</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Promotion Class
            </p>
        </field>
    </record>

    <!-- Menuitem di bawah Configuration -->
    <menuitem id="menu_pos_promotion_class"
              name="Promotion Class"
              parent="point_of_sale.menu_point_config_product"
              action="action_pos_promotion_class"
              sequence="60"/>

    <!-- List View -->
    <record id="view_pos_promotion_class_tree" model="ir.ui.view">
        <field name="name">pos.promotion.class.list</field>
        <field name="model">pos.promotion.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pos_promotion_class_form" model="ir.ui.view">
        <field name="name">pos.promotion.class.form</field>
        <field name="model">pos.promotion.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
