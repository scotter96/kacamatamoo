<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_config_form_inherit_address" model="ir.ui.view">
            <field name="name">pos.config.form.inherit.address</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <label for="pos_code" string="POS Code" class="o_form_label"/>
                    <field name="pos_code" placeholder="e.g. KCMT-123 or POS123"/>
                    <group string="Store Address &amp; Contact">
                        <group>
                            <label for="street" string="Address" class="o_address_format"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <div class="d-flex" style="gap: 24px;">
                                    <field name="city_id" placeholder="City" class="o_address_city" style="flex:1 1 0; min-width:120px;"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" 
                                           options="{'no_open': True, 'no_quick_create': True}" 
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"
                                           style="flex:1 1 0; min-width:120px;"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" style="flex:1 1 0; min-width:100px;"/>
                                </div>
                                <field name="country_id" placeholder="Country" class="o_address_country" 
                                       options="{'no_open': True, 'no_create': True}"/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" widget="phone" style="flex:2 1 0; min-width:200px;"/>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</odoo>