<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <record id="module_category_thinq_petty_cash" model="ir.module.category">
            <field name="name">Petty Cash</field>
            <field name="description">Category for Thinq Petty Cash module</field>
            <field name="sequence">10</field>
        </record>
    
        <record id="group_petty_cash_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_thinq_petty_cash"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_petty_cash_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_thinq_petty_cash"/>
            <field name="implied_ids" eval="[(4, ref('thinq_petty_cash.group_petty_cash_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    
    </data>
    

</odoo>
