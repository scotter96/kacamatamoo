<odoo>
    <data>
        <!-- Action -->
        <record id="action_assets_root" model="ir.actions.act_window">
            <field name="name">Assets</field>
            <field name="res_model">account.asset</field>
            <field name="view_mode">list,form</field> 
            <field name="domain">[('state', '!=', 'model')]</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu Root -->
        <menuitem id="menu_assets_root"
            name="Assets"
            sequence="20"
            action="action_assets_root"
            web_icon="thinq_asset,static/description/assets.png"/>

        <!-- sub menu GA Asset Category -->
        <menuitem id="menu_ga_asset_category"
            name="GA Asset Categories"
            parent="menu_assets_root"
            action="action_ga_asset_category"
            sequence="10"
            groups="account.group_account_manager"/>

        <!-- sub menu GA Asset Attribute -->
        <menuitem id="menu_ga_asset_attribute"
            name="GA Asset Attributes"
            parent="menu_assets_root"
            action="action_ga_asset_attribute"
            sequence="20"
            groups="account.group_account_manager"/>
    </data>
</odoo>
