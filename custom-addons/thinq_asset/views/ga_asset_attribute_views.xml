<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- list View -->
        <record id="view_ga_asset_attribute_list" model="ir.ui.view">
            <field name="name">ga.asset.attribute.list</field>
            <field name="model">ga.asset.attribute</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_ga_asset_attribute_form" model="ir.ui.view">
            <field name="name">ga.asset.attribute.form</field>
            <field name="model">ga.asset.attribute</field>
            <field name="arch" type="xml">
                <form string="GA Asset Attribute">
                    <sheet>
                        <field name="name"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_ga_asset_attribute" model="ir.actions.act_window">
            <field name="name">GA Asset Attributes</field>
            <field name="res_model">ga.asset.attribute</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_ga_asset_attribute"
                  name="GA Asset Attributes"
                  parent="account.account_management_menu"
                  action="action_ga_asset_attribute"
                  sequence="20"
                  groups="account.group_account_manager"/>

    </data>
</odoo>