<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_ga_asset_category_list" model="ir.ui.view">
            <field name="name">ga.asset.category.list</field>
            <field name="model">ga.asset.category</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_ga_asset_category_form" model="ir.ui.view">
            <field name="name">ga.asset.category.form</field>
            <field name="model">ga.asset.category</field>
            <field name="arch" type="xml">
                <form string="GA Asset Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ga_asset_category" model="ir.actions.act_window">
            <field name="name">GA Asset Categories</field>
            <field name="res_model">ga.asset.category</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_ga_asset_category"
        name="GA Asset Categories"
        parent="account.account_management_menu"
        action="action_ga_asset_category"
        sequence="10"
        groups="account.group_account_manager"/>

    </data>
</odoo>