<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Company Settings Form -->
    <record id="view_company_form_inherit_deposit" model="ir.ui.view">
        <field name="name">res.company.form.inherit.deposit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="account.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Tambah page baru setelah page yang ada -->
            <xpath expr="//notebook" position="inside">
                <page string="Deposits" name="deposits">
                    <group string="Deposit Accounts" name="deposit_accounts_grp">
                        <field name="account_customer_deposit_id"/>
                        <field name="account_vendor_deposit_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>